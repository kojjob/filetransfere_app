<script>
  // Analytics tracking helper (works with GA4 and Plausible)
  function trackEvent(eventName, eventProps = {}) {
    // Google Analytics 4
    if (typeof gtag === 'function') {
      gtag('event', eventName, eventProps);
    }
    // Plausible Analytics
    if (typeof plausible === 'function') {
      plausible(eventName, { props: eventProps });
    }
  }

  // Waitlist form handling with safe DOM manipulation
  (function() {
    const form = document.getElementById('waitlist-form');
    if (!form) return;

    const formError = document.getElementById('form-error');

    // Helper function to show error message accessibly
    function showError(message) {
      if (formError) {
        formError.textContent = message;
        formError.classList.remove('hidden');
        // Focus the error for screen reader announcement
        formError.focus();
      }
    }

    // Helper function to hide error message
    function hideError() {
      if (formError) {
        formError.textContent = '';
        formError.classList.add('hidden');
      }
    }

    // Helper function to reset button state
    function resetButton(submitBtn, submitText, submitLoading) {
      submitBtn.disabled = false;
      submitText.textContent = 'Join the Waitlist';
      submitLoading.classList.add('hidden');
    }

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      hideError();

      // Track form submission attempt
      trackEvent('waitlist_form_submit', { action: 'attempt' });

      const submitBtn = document.getElementById('submit-btn');
      const submitText = document.getElementById('submit-text');
      const submitLoading = document.getElementById('submit-loading');

      // Show loading state using classList (safe)
      submitBtn.disabled = true;
      submitText.textContent = 'Submitting...';
      submitLoading.classList.remove('hidden');

      const formData = {
        waitlist_entry: {
          email: document.getElementById('email').value,
          name: document.getElementById('name').value || null,
          use_case: document.getElementById('useCase').value || null
        }
      };

      try {
        const response = await fetch('/api/waitlist', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(formData)
        });

        if (response.ok) {
          // Track successful conversion
          trackEvent('waitlist_signup', { action: 'success' });
          // Show success message using classList (safe)
          form.classList.add('hidden');
          document.getElementById('waitlist-success').classList.remove('hidden');
        } else {
          const data = await response.json();
          const errorMsg = (data.errors && data.errors.email && data.errors.email[0])
            || 'Something went wrong. Please try again.';
          showError(errorMsg);
          resetButton(submitBtn, submitText, submitLoading);
        }
      } catch (error) {
        console.error('Error:', error);
        showError('Network error. Please check your connection and try again.');
        resetButton(submitBtn, submitText, submitLoading);
      }
    });
  })();

  // Track CTA clicks and section engagement
  (function() {
    // Track hero CTA clicks
    document.querySelectorAll('a[href="#waitlist"]').forEach(function(link) {
      link.addEventListener('click', function() {
        trackEvent('cta_click', { location: 'hero', target: 'waitlist' });
      });
    });

    // Track demo section engagement
    document.querySelectorAll('a[href="#demo"]').forEach(function(link) {
      link.addEventListener('click', function() {
        trackEvent('cta_click', { location: 'navigation', target: 'demo' });
      });
    });

    // Track features section engagement
    document.querySelectorAll('a[href="#features"]').forEach(function(link) {
      link.addEventListener('click', function() {
        trackEvent('cta_click', { location: 'navigation', target: 'features' });
      });
    });

    // Track FAQ section engagement
    document.querySelectorAll('a[href="#faq"]').forEach(function(link) {
      link.addEventListener('click', function() {
        trackEvent('cta_click', { location: 'navigation', target: 'faq' });
      });
    });

    // Track scroll engagement with key sections (using Intersection Observer)
    if ('IntersectionObserver' in window) {
      const sectionsToTrack = ['features', 'demo', 'use-cases', 'faq', 'waitlist'];
      const trackedSections = new Set();

      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !trackedSections.has(entry.target.id)) {
            trackedSections.add(entry.target.id);
            trackEvent('section_view', { section: entry.target.id });
          }
        });
      }, { threshold: 0.3 });

      sectionsToTrack.forEach(function(sectionId) {
        const section = document.getElementById(sectionId);
        if (section) observer.observe(section);
      });
    }
  })();
</script>
