<div class="min-h-screen">
  <%!-- Skip to Main Content - Accessibility --%>
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-primary focus:text-primary-content focus:rounded-lg focus:shadow-lg"
  >
    Skip to main content
  </a>

  <%!-- Navigation --%>
  <nav
    class="fixed top-0 left-0 right-0 z-50 backdrop-blur-xl bg-base-100/80 border-b border-base-300/50"
    aria-label="Main navigation"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <%!-- Logo --%>
        <a href="/" class="flex items-center gap-3">
          <img src={~p"/images/logo.svg"} alt="ZipShare" class="w-10 h-10" />
          <span class="text-xl font-bold bg-gradient-to-r from-indigo-500 to-pink-500 bg-clip-text text-transparent">
            ZipShare
          </span>
        </a>

        <%!-- Nav Links & Theme Toggle --%>
        <div class="flex items-center gap-4">
          <a
            href="#features"
            class="hidden sm:block text-sm text-base-content/70 hover:text-base-content link-underline"
          >
            Features
          </a>
          <a
            href="#demo"
            class="hidden sm:block text-sm text-base-content/70 hover:text-base-content link-underline"
          >
            Demo
          </a>
          <a
            href="#faq"
            class="hidden sm:block text-sm text-base-content/70 hover:text-base-content link-underline"
          >
            FAQ
          </a>
          <a
            href="#waitlist"
            class="hidden sm:block text-sm text-base-content/70 hover:text-base-content link-underline"
          >
            Join Waitlist
          </a>
          <Layouts.theme_toggle />
        </div>
      </div>
    </div>
  </nav>

  <%!-- Hero Section --%>
  <section
    id="main-content"
    class="relative pt-28 pb-24 px-4 overflow-hidden min-h-[90vh] flex items-center"
  >
    <%!-- Animated Background (decorative) --%>
    <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
      <%!-- Gradient mesh background --%>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(99,102,241,0.15),rgba(255,255,255,0))]">
      </div>

      <%!-- Animated gradient blobs --%>
      <div class="absolute -top-40 -right-40 w-[500px] h-[500px] bg-gradient-to-br from-indigo-500/30 to-purple-500/20 rounded-full blur-3xl animate-float">
      </div>
      <div class="absolute top-1/3 -left-40 w-[400px] h-[400px] bg-gradient-to-br from-pink-500/25 to-rose-500/15 rounded-full blur-3xl animate-float-delayed">
      </div>
      <div class="absolute bottom-20 right-1/4 w-[300px] h-[300px] bg-gradient-to-br from-purple-500/20 to-indigo-500/10 rounded-full blur-3xl animate-float">
      </div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-br from-cyan-500/10 to-blue-500/5 rounded-full blur-3xl">
      </div>

      <%!-- Subtle grid pattern --%>
      <div class="absolute inset-0 bg-[linear-gradient(to_right,rgba(99,102,241,0.03)_1px,transparent_1px),linear-gradient(to_bottom,rgba(99,102,241,0.03)_1px,transparent_1px)] bg-[size:4rem_4rem]">
      </div>
    </div>

    <div class="max-w-7xl mx-auto relative z-10 w-full">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <%!-- Left Column: Content --%>
        <div class="text-center lg:text-left">
          <%!-- Badge --%>
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-indigo-500/10 to-purple-500/10 backdrop-blur-sm border border-indigo-500/20 mb-8 animate-fade-in-up">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-success opacity-75">
              </span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-success"></span>
            </span>
            <span class="text-sm font-medium bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-transparent">
              Early Access Available
            </span>
            <.icon name="hero-arrow-right-mini" class="w-4 h-4 text-indigo-500" />
          </div>

          <%!-- Headline --%>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-[1.1] mb-6 animate-fade-in-up">
            Transfer Files at
            <span class="relative">
              <span class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">
                Lightning Speed
              </span>
              <svg
                class="absolute -bottom-2 left-0 w-full h-3 text-indigo-500/30"
                viewBox="0 0 200 12"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M2 10C50 4 150 4 198 10"
                  stroke="currentColor"
                  stroke-width="4"
                  stroke-linecap="round"
                />
              </svg>
            </span>
          </h1>

          <%!-- Subheadline --%>
          <p class="text-lg sm:text-xl text-base-content/70 max-w-xl mx-auto lg:mx-0 mb-10 animate-fade-in-up animation-delay-200 leading-relaxed">
            Upload and share large files instantly with real-time progress tracking,
            resumable transfers, and enterprise-grade security.
            <span class="text-base-content font-medium">No file size limits.</span>
          </p>

          <%!-- CTA Buttons --%>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up animation-delay-300">
            <a
              href="#waitlist"
              class="group btn btn-primary btn-lg gap-2 px-8 shadow-xl shadow-primary/25 hover:shadow-2xl hover:shadow-primary/30 hover:-translate-y-1 transition-all duration-300"
            >
              <.icon
                name="hero-rocket-launch"
                class="w-5 h-5 group-hover:rotate-12 transition-transform"
              /> Get Early Access
            </a>
            <a href="#demo" class="btn btn-ghost btn-lg gap-2 hover:bg-base-200/50 group">
              <.icon
                name="hero-play-circle"
                class="w-5 h-5 group-hover:scale-110 transition-transform"
              /> Watch Demo
            </a>
          </div>

          <%!-- Trust Signals --%>
          <div class="flex flex-wrap items-center gap-6 mt-10 justify-center lg:justify-start animate-fade-in-up animation-delay-400">
            <div class="flex items-center gap-2 text-sm text-base-content/60">
              <.icon name="hero-shield-check" class="w-5 h-5 text-success" />
              <span>256-bit Encryption</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-base-content/60">
              <.icon name="hero-server-stack" class="w-5 h-5 text-info" />
              <span>99.9% Uptime</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-base-content/60">
              <.icon name="hero-globe-alt" class="w-5 h-5 text-warning" />
              <span>Global CDN</span>
            </div>
          </div>
        </div>

        <%!-- Right Column: Interactive Upload Preview --%>
        <div class="relative animate-fade-in-up animation-delay-300 hidden lg:block">
          <%!-- Floating elements --%>
          <div class="absolute -top-8 -left-8 p-4 rounded-2xl bg-base-100/90 backdrop-blur-sm border border-base-300/50 shadow-xl animate-float">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-green-400 to-emerald-500 flex items-center justify-center">
                <.icon name="hero-check" class="w-5 h-5 text-white" />
              </div>
              <div>
                <p class="text-sm font-semibold">Upload Complete</p>
                <p class="text-xs text-base-content/60">project_files.zip</p>
              </div>
            </div>
          </div>

          <div class="absolute -bottom-4 -right-4 p-4 rounded-2xl bg-base-100/90 backdrop-blur-sm border border-base-300/50 shadow-xl animate-float-delayed">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center">
                <.icon name="hero-link" class="w-5 h-5 text-white" />
              </div>
              <div>
                <p class="text-sm font-semibold">Link Copied!</p>
                <p class="text-xs text-base-content/60">Ready to share</p>
              </div>
            </div>
          </div>

          <%!-- Main Upload Card --%>
          <div class="relative p-8 rounded-3xl bg-gradient-to-br from-base-100 to-base-200/50 border border-base-300/50 shadow-2xl">
            <%!-- Card Header --%>
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg shadow-indigo-500/30">
                  <.icon name="hero-cloud-arrow-up" class="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 class="font-bold text-lg">Quick Upload</h3>
                  <p class="text-sm text-base-content/60">Drag & drop your files</p>
                </div>
              </div>
              <div class="flex gap-1.5">
                <div class="w-3 h-3 rounded-full bg-error/80"></div>
                <div class="w-3 h-3 rounded-full bg-warning/80"></div>
                <div class="w-3 h-3 rounded-full bg-success/80"></div>
              </div>
            </div>

            <%!-- Upload Zone --%>
            <div class="border-2 border-dashed border-indigo-500/30 rounded-2xl p-8 mb-6 bg-indigo-500/5 hover:bg-indigo-500/10 transition-colors cursor-pointer group">
              <div class="text-center">
                <div class="w-16 h-16 rounded-full bg-gradient-to-br from-indigo-500/20 to-purple-500/20 flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
                  <.icon name="hero-arrow-up-tray" class="w-8 h-8 text-indigo-500" />
                </div>
                <p class="font-medium mb-1">Drop files here or click to browse</p>
                <p class="text-sm text-base-content/60">Support for files up to 10GB</p>
              </div>
            </div>

            <%!-- Sample File Upload Progress --%>
            <div class="space-y-4">
              <div class="flex items-center gap-4 p-4 rounded-xl bg-base-100 border border-base-300/50">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500/20 to-cyan-500/20 flex items-center justify-center">
                  <.icon name="hero-document" class="w-5 h-5 text-blue-500" />
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between mb-1">
                    <p class="font-medium text-sm truncate">presentation.pdf</p>
                    <span class="text-xs text-success font-medium">Complete</span>
                  </div>
                  <div class="w-full h-1.5 rounded-full bg-base-300 overflow-hidden">
                    <div class="h-full w-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full">
                    </div>
                  </div>
                </div>
                <.icon name="hero-check-circle" class="w-5 h-5 text-success flex-shrink-0" />
              </div>

              <div class="flex items-center gap-4 p-4 rounded-xl bg-base-100 border border-base-300/50">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-500/20 to-pink-500/20 flex items-center justify-center">
                  <.icon name="hero-film" class="w-5 h-5 text-purple-500" />
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between mb-1">
                    <p class="font-medium text-sm truncate">demo_video.mp4</p>
                    <span class="text-xs text-base-content/60">2.4 GB / 4.8 GB</span>
                  </div>
                  <div class="w-full h-1.5 rounded-full bg-base-300 overflow-hidden">
                    <div class="h-full w-1/2 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full animate-pulse">
                    </div>
                  </div>
                </div>
                <span class="text-xs font-medium text-indigo-500">50%</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%!-- Stats Row --%>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-20 pt-12 border-t border-base-300/50">
        <div class="text-center group">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-indigo-500/10 to-purple-500/10 mb-4 group-hover:scale-110 transition-transform">
            <.icon name="hero-cloud-arrow-up" class="w-7 h-7 text-indigo-500" />
          </div>
          <div class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-transparent">
            10GB+
          </div>
          <div class="text-sm text-base-content/60 mt-1">Max File Size</div>
        </div>
        <div class="text-center group">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500/10 to-green-500/10 mb-4 group-hover:scale-110 transition-transform">
            <.icon name="hero-shield-check" class="w-7 h-7 text-emerald-500" />
          </div>
          <div class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-emerald-500 to-green-500 bg-clip-text text-transparent">
            256-bit
          </div>
          <div class="text-sm text-base-content/60 mt-1">AES Encryption</div>
        </div>
        <div class="text-center group">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-500/10 to-cyan-500/10 mb-4 group-hover:scale-110 transition-transform">
            <.icon name="hero-server-stack" class="w-7 h-7 text-blue-500" />
          </div>
          <div class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-blue-500 to-cyan-500 bg-clip-text text-transparent">
            99.9%
          </div>
          <div class="text-sm text-base-content/60 mt-1">Uptime SLA</div>
        </div>
        <div class="text-center group">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500/10 to-orange-500/10 mb-4 group-hover:scale-110 transition-transform">
            <.icon name="hero-bolt" class="w-7 h-7 text-amber-500" />
          </div>
          <div class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-amber-500 to-orange-500 bg-clip-text text-transparent">
            5GB/s
          </div>
          <div class="text-sm text-base-content/60 mt-1">Transfer Speed</div>
        </div>
      </div>
    </div>
  </section>

  <%!-- Features Section --%>
  <section
    id="features"
    class="py-24 px-4 relative overflow-hidden"
    aria-labelledby="features-heading"
  >
    <%!-- Animated Background (decorative) --%>
    <div
      class="absolute inset-0 bg-gradient-to-b from-base-200/80 via-base-100 to-base-200/80"
      aria-hidden="true"
    >
    </div>
    <div
      class="absolute top-0 left-1/4 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl animate-float"
      aria-hidden="true"
    >
    </div>
    <div
      class="absolute bottom-0 right-1/4 w-96 h-96 bg-pink-500/10 rounded-full blur-3xl animate-float-delayed"
      aria-hidden="true"
    >
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
      <%!-- Section Header --%>
      <div class="text-center mb-20">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6">
          <.icon name="hero-sparkles" class="w-4 h-4 text-primary" />
          <span class="text-sm font-medium text-primary">Powerful Features</span>
        </div>
        <h2 id="features-heading" class="text-4xl sm:text-5xl font-bold mb-6">
          Everything You Need for
          <span class="block mt-2 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 bg-clip-text text-transparent">
            Seamless Transfers
          </span>
        </h2>
        <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
          Built with cutting-edge technology to handle your largest files with ease.
          No more failed uploads or corrupted downloads.
        </p>
      </div>

      <%!-- Bento Grid Layout --%>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        <%!-- Feature 1: Large File Support (Featured - Large Card) --%>
        <div class="md:col-span-2 lg:col-span-1 lg:row-span-2 group">
          <div class="h-full p-8 rounded-3xl bg-gradient-to-br from-indigo-500/10 via-base-100 to-purple-500/10 border border-indigo-500/20 shadow-xl hover:shadow-2xl hover:shadow-indigo-500/10 transition-all duration-500 hover:-translate-y-2">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center mb-6 shadow-lg shadow-indigo-500/30 group-hover:scale-110 transition-transform duration-300">
              <.icon name="hero-cloud-arrow-up" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-2xl font-bold mb-4">Large File Support</h3>
            <p class="text-base-content/70 mb-6 leading-relaxed">
              Transfer files up to 10GB with our intelligent chunked upload technology.
              Perfect for video files, archives, datasets, and everything in between.
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 rounded-full bg-indigo-500/10 text-indigo-500 text-xs font-medium">
                10GB Max
              </span>
              <span class="px-3 py-1 rounded-full bg-purple-500/10 text-purple-500 text-xs font-medium">
                Chunked Upload
              </span>
              <span class="px-3 py-1 rounded-full bg-pink-500/10 text-pink-500 text-xs font-medium">
                Any Format
              </span>
            </div>
          </div>
        </div>

        <%!-- Feature 2: Real-time Progress --%>
        <div class="group">
          <div class="h-full p-6 rounded-3xl bg-base-100 border border-base-300/50 shadow-lg hover:shadow-xl hover:border-purple-500/30 transition-all duration-500 hover:-translate-y-2">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center mb-5 shadow-lg shadow-purple-500/20 group-hover:scale-110 transition-transform duration-300">
              <.icon name="hero-signal" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-bold mb-3">Real-time Progress</h3>
            <p class="text-base-content/70 text-sm leading-relaxed">
              Watch your uploads in real-time with accurate progress bars,
              speed indicators, and time estimates.
            </p>
          </div>
        </div>

        <%!-- Feature 3: Resumable Transfers --%>
        <div class="group">
          <div class="h-full p-6 rounded-3xl bg-base-100 border border-base-300/50 shadow-lg hover:shadow-xl hover:border-pink-500/30 transition-all duration-500 hover:-translate-y-2">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-pink-500 to-rose-500 flex items-center justify-center mb-5 shadow-lg shadow-pink-500/20 group-hover:scale-110 transition-transform duration-300">
              <.icon name="hero-arrow-path" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-bold mb-3">Resumable Transfers</h3>
            <p class="text-base-content/70 text-sm leading-relaxed">
              Connection dropped? No problem. Resume interrupted uploads
              from exactly where they left off.
            </p>
          </div>
        </div>

        <%!-- Feature 4: End-to-End Encryption (Wide Card) --%>
        <div class="md:col-span-2 group">
          <div class="h-full p-8 rounded-3xl bg-gradient-to-r from-emerald-500/10 via-base-100 to-teal-500/10 border border-emerald-500/20 shadow-xl hover:shadow-2xl hover:shadow-emerald-500/10 transition-all duration-500 hover:-translate-y-2">
            <div class="flex flex-col sm:flex-row sm:items-start gap-6">
              <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center shadow-lg shadow-emerald-500/30 group-hover:scale-110 transition-transform duration-300 flex-shrink-0">
                <.icon name="hero-shield-check" class="w-8 h-8 text-white" />
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold mb-3">End-to-End Encryption</h3>
                <p class="text-base-content/70 leading-relaxed mb-4">
                  Your files are encrypted with military-grade AES-256 encryption before leaving your device.
                  Only you and your recipients can access them. Zero-knowledge architecture means even we can't see your files.
                </p>
                <div class="flex items-center gap-4 text-sm">
                  <div class="flex items-center gap-2 text-emerald-500">
                    <.icon name="hero-lock-closed" class="w-4 h-4" />
                    <span class="font-medium">AES-256</span>
                  </div>
                  <div class="flex items-center gap-2 text-teal-500">
                    <.icon name="hero-eye-slash" class="w-4 h-4" />
                    <span class="font-medium">Zero Knowledge</span>
                  </div>
                  <div class="flex items-center gap-2 text-cyan-500">
                    <.icon name="hero-check-badge" class="w-4 h-4" />
                    <span class="font-medium">SOC2 Compliant</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%!-- Feature 5: Instant Sharing --%>
        <div class="group">
          <div class="h-full p-6 rounded-3xl bg-base-100 border border-base-300/50 shadow-lg hover:shadow-xl hover:border-orange-500/30 transition-all duration-500 hover:-translate-y-2">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-orange-500 to-amber-500 flex items-center justify-center mb-5 shadow-lg shadow-orange-500/20 group-hover:scale-110 transition-transform duration-300">
              <.icon name="hero-link" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-bold mb-3">Instant Sharing</h3>
            <p class="text-base-content/70 text-sm leading-relaxed">
              Generate secure download links with password protection,
              expiration dates, and download limits.
            </p>
          </div>
        </div>

        <%!-- Feature 6: Cross-Platform --%>
        <div class="group">
          <div class="h-full p-6 rounded-3xl bg-base-100 border border-base-300/50 shadow-lg hover:shadow-xl hover:border-blue-500/30 transition-all duration-500 hover:-translate-y-2">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center mb-5 shadow-lg shadow-blue-500/20 group-hover:scale-110 transition-transform duration-300">
              <.icon name="hero-device-phone-mobile" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-bold mb-3">Cross-Platform</h3>
            <p class="text-base-content/70 text-sm leading-relaxed">
              Works seamlessly on desktop, tablet, and mobile.
              No app installation required.
            </p>
          </div>
        </div>

        <%!-- Feature 7: API Access --%>
